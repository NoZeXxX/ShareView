{
  "include": ["src/**/*.ts"],
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "noImplicitAny": false
  }
}
